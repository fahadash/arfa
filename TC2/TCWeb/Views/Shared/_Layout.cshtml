<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Scripts/KendoUI/styles/kendo.common.min.css")
        @Styles.Render("~/Scripts/KendoUI/styles/kendo.default.min.css")
        

        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/Scripts/KendoUI/js/jquery.min.js")
       
        @Scripts.Render("~/Scripts/KendoUI/js/kendo.web.min.js")
        @Scripts.Render("~/Scripts/KendoUI/js/kendo.tabstrip.min.js")
    </head>

    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("TC", "Index", "Home")</p>
                </div>


                    <div class="float-right" >
                        <section id="login">
                            @Html.Partial("_LoginPartial")
                        </section>

                    </div>
                <div style="display:block;">&nbsp;</div>
                <div style="display:block;">
                      &nbsp;  
                </div>
                    <div class="float-left">
                         <div id="menuWrapperDiv" class="k-content">
                            <ul id="mainmenu">
                                <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                                <li>
                                    Play
                                    <ul>
                                    @if (TCWeb.Utility.SessionUtil.IsUserLoggedIn)
                                    {
                                        <li>@Html.ActionLink("Play Lounge", "Index", "PlayLounge",  new { area="Table" }, null)</li>
                                    }
                                    else
                                    {
                                        <li>@Html.ActionLink("Login to access features", "Login", "Account", new { area="" }, null)</li>
                                    }

                                    </ul>
                                </li>
                                <li>
                                    About
                                    <ul>                                        
                                     
                                     <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, null)</li>
                                     <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, null)</li>
                                    </ul>
                                </li>
                            </ul>
                        </div>  
                    </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>

        @RenderSection("scripts", required: false)
    </body>
</html>
<script type="text/javascript">

    $(document).ready(function () {
        $("#mainmenu").kendoMenu();
    });
</script>